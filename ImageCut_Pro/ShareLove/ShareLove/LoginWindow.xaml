<Window x:Class="ShareLove.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="400" Icon="sharelove.ico"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Grid Background="#f0f0f0">
        <Border Background="White" BorderBrush="#ccc" BorderThickness="1" CornerRadius="10" Padding="20" Width="300" Height="260" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Height="213" VerticalAlignment="Top">
                <Image Height="35" Width="47" Source="/sharelove.jpg"/>
                <TextBlock Text="Username" Margin="0,10,0,5" />
                <TextBox x:Name="UsernameTextBox" Width="200" Margin="0,0,0,10" />

                <TextBlock Text="Password" Margin="0,10,0,5" />
                <PasswordBox x:Name="PasswordBox" Width="200" Margin="0,0,0,20" />

                <Button Content="Login" Width="100" Height="30" HorizontalAlignment="Center" Click="LoginButton_Click"/>

                <TextBox HorizontalAlignment="Center" Margin="0,5,0,0" TextWrapping="Wrap" Text="sharelove.pt  Print Area"  Width="180" Opacity="0.5" HorizontalContentAlignment="Center" BorderThickness="0,0,0,0" Height="19"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
